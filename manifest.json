{
  "manifest_version": 3,
  "name": "YoSelection",
  "version": "0.1.0",
  "description": "Personal selection builder with sync (Wish/Sell/Buy/Sell Sets) and PNG export.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "YoSelection",\n    "default_icon": {\n      "16": "Icons/16x16.png",\n      "32": "Icons/32x32.png",\n      "48": "Icons/48x48.png",\n      "128": "Icons/128x128.png"\n    }\n  },
  "side_panel": {\n    "default_path": "sidepanel.html"\n  },\n  "icons": {\n    "16": "Icons/16x16.png",\n    "32": "Icons/32x32.png",\n    "48": "Icons/48x48.png",\n    "128": "Icons/128x128.png"\n  },
  "permissions": [
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "https://api.yoworld.info/*",
    "https://yw-web.yoworld.com/*"
  ]
}

