{
  "manifest_version": 3,
  "name": "YoSelection",
  "version": "0.1.0",
  "description": "Personal selection builder with sync (Wish/Sell/Buy/Sell Sets) and PNG export.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "YoSelection",
    "default_icon": {
      "16": "Icons/16x16.png",
      "32": "Icons/32x32.png",
      "48": "Icons/48x48.png",
      "128": "Icons/128x128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "Icons/16x16.png",
    "32": "Icons/32x32.png",
    "48": "Icons/48x48.png",
    "128": "Icons/128x128.png"
  },
  "permissions": [
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "https://api.yoworld.info/*",
    "https://yw-web.yoworld.com/*"
  ]
}
